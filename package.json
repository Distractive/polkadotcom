{
  "name": "turborepo-nextjs",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:turbo": "turbo run dev:turbo --parallel",
    "lint": "turbo run lint",
    "lint:fix": "turbo lint -- --fix && manypkg fix",
    "test": "SKIP_ENV_VALIDATION=true vitest",
    "test:ui": "SKIP_ENV_VALIDATION=true vitest --ui",
    "test:run": "SKIP_ENV_VALIDATION=true vitest run",
    "manypkg:fix": "manypkg fix",
    "postinstall": "manypkg check",
    "typecheck": "turbo typecheck",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "prepare": "husky"
  },
  "pnpm": {
    "overrides": {
      "@opentelemetry/api": "1.4.1",
      "@opentelemetry/core": "1.13.0",
      "@opentelemetry/exporter-trace-otlp-grpc": "0.39.1",
      "@opentelemetry/resources": "1.13.0",
      "@opentelemetry/sdk-trace-base": "1.13.0",
      "@opentelemetry/sdk-trace-node": "1.13.0",
      "@opentelemetry/semantic-conventions": "1.13.0"
    }
  },
  "engines": {
    "node": ">=22.x"
  },
  "packageManager": "pnpm@10.3.0",
  "dependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@manypkg/cli": "^0.21.3",
    "@shared/eslint-config": "workspace:*",
    "@turbo/gen": "^1.13.0",
    "@vitest/ui": "^3.0.5",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.13",
    "turbo": "^1.13.0",
    "vitest": "^3.0.5"
  },
  "manypkg": {
    "ignoredRules": [
      "INTERNAL_MISMATCH"
    ]
  }
}
